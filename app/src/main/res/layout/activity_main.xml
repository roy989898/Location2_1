<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pom2.poly.com.location2_1.MainActivity">


    <Button
        android:id="@+id/request_activity_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="requestActivityUpdate"
        android:text="Request" />

    <Button
        android:id="@+id/remove_activity_update_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:onClick="removetActivityUpdate"
        android:text="Remove" />

    <TextView
        android:id="@+id/detected_activity_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detected_activity" />
</LinearLayout>
